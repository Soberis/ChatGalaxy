{
  "name": "chatgalaxy",
  "version": "1.0.0",
  "private": true,
  "description": "ChatGalaxy - 现代化AI聊天平台",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": "^20.16.0 || >=22.12.0",
    "pnpm": ">=8.0.0",
    "python": ">=3.11"
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:frontend\" \"pnpm run dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "cd backend && python -m uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "build": "pnpm run build:frontend",
    "build:frontend": "pnpm --filter frontend build",
    "test": "pnpm run test:frontend && pnpm run test:backend",
    "test:frontend": "pnpm --filter frontend test:unit",
    "test:backend": "cd backend && python -m pytest",
    "lint": "pnpm run lint:frontend && pnpm run lint:backend",
    "lint:frontend": "pnpm --filter frontend lint",
    "lint:backend": "cd backend && ruff check .",
    "format": "pnpm run format:frontend && pnpm run format:backend",
    "format:frontend": "pnpm --filter frontend format",
    "format:backend": "cd backend && ruff format .",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "setup": "pnpm install && pnpm run install:backend",
    "clean": "pnpm --filter frontend clean && rm -rf backend/__pycache__ backend/**/__pycache__"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ChatGalaxy.git"
  },
  "keywords": [
    "chat",
    "ai",
    "vue",
    "fastapi",
    "websocket",
    "typescript"
  ],
  "license": "MIT"
}
